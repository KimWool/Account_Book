<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/income_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:gravity="center"
                android:text="수입"
                android:textColor="#FFFFFF"
                tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,NestedWeights,VisualLintButtonSize" />

            <TextView
                android:id="@+id/income_category_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="카테고리를\n선택하세요"
                tools:ignore="HardcodedText,InefficientWeight" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/expense_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:gravity="center"
                android:text="지출"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText,NestedWeights,VisualLintButtonSize" />

            <TextView
                android:id="@+id/expense_category_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="카테고리를\n선택하세요"
                tools:ignore="HardcodedText,InefficientWeight" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="InefficientWeight">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="임시 레이어"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="InefficientWeight,UselessParent">

            <Button
                android:id="@+id/purpose_btn"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_weight="2"
                android:background="@color/purple_500"
                android:gravity="center"
                android:text="작성 목적"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText,NestedWeights,VisualLintButtonSize" />

            <EditText
                android:id="@+id/purpose_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="작성 목적을 입력하세요"
                tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize,TextContrastCheck" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>